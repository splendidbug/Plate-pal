{
  "version": "2.0.0",
  "tasks": [
    {
      "group": "build",
      "type": "flutter",
      "command": "flutter",
      "isBackground": true,
      "label": "flutter: flutter pub run build_runner watch",
      "args": [
        "pub",
        "run",
        "build_runner",
        "watch",
        "--delete-conflicting-outputs"
      ],
      "problemMatcher": [
        "$dart-build_runner"
      ],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}